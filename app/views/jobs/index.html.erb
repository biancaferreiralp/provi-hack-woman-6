<h1>Vagas</h1>

<!-- <%= link_to "Adicionar vaga", new_job_path %> -->

<%= link_to "Realizar nova busca", root_path %>
<%= link_to "Ver todas as vagas", jobs_path %>

<% @jobs.each do |job| %>
  <p>
    <%= job.user.company_name %>
    <%= job.title %>
    <%= job.location %>
    <% job.requirements.each do |requirement| %>
      <p>- <%= requirement %></p>
    <% end %>
    <%= job.format %>
    <%= job.modality %>

    <%= link_to "Saiba mais", job_path(job.id) %>
  </p>
  <br>
<% end %>
